{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "plugin:cypress/recommended"
  ],
  "plugins": [
    "prettier",
    "cypress"
  ],
  "env": {
    "cypress/globals": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "error",
    "no-debugger": "error",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "@next/next/no-img-element": "off",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "cypress/no-unnecessary-waiting": "off"
  }
}
